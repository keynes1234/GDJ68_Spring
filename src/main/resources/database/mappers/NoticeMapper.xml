<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	
	
		 <mapper namespace="com.iu.main.notice.NoticeDAO">
		 
		 <select id="getDetail" resultType="com.iu.main.notice.NoticeDTO" parameterType="com.iu.main.notice.NoticeDTO">
		SELECT * FROM NOTICE WHERE NOTICENO=#{noticeNo}
		</select>
		 
		     <select id="getList" resultType="NoticeDTO">
		        SELECT 
		           * 
		        FROM 
		           NOTICE 
		        ORDER BY 
		           NOTICENO DESC
		     </select>
	  <insert id="setAdd" parameterType="NoticeDTO">
        INSERT 
        INTO 
           NOTICE 
        VALUES 
           (
              NOTICE_SEQ.NEXTVAL, 
              #{noticeSubject}, 
              #{noticeName}, 
              SYSDATE, 
              0, 
              #{noticeContents}
           )
     </insert>
		     
		</mapper>